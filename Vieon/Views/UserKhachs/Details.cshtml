@model Vieon.Models.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/ChiTiet.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>


<style>
    .vertical-scroll-container {
        overflow-y: scroll;
        height: 200px;
        width: 950px;
        border: 1px solid #ccc;
        padding: 10px;
    }

    .dau-sach-list {
        list-style: none;
        padding: 0;
    }

    .info-column {
        margin-right: 20px;
    }
</style>
<div style="margin-left: 10%">
    <h2>Thông tin tài khoản</h2>
    <hr />
    <div class="row" style="margin-left:2%">
        <div class="info-column">
            <strong>Họ tên:</strong> @Html.DisplayFor(model => model.HoTen)
            <br />
            <br />
            <strong>Email:</strong> @Html.DisplayFor(model => model.Email)
            <br />
            <br />
            <strong>Loại tài khoản:</strong> @Html.DisplayFor(model => model.RoleUser)
        </div>
        <div class="info-column" style="margin-left:5%">
            <strong>Số điện thoại:</strong> @Html.DisplayFor(model => model.SDT)
            <br />
            <br />
            <span id="password-container">
                <strong>Mật khẩu:</strong>
                <span id="password-value" data-password="@Model.MatKhau">******</span>
                <br />
                <a href="#" id="show-hide-password">Hiện</a>
            </span>


        </div>
    </div>
    <br />
    <p style="margin-left:900px">
        @if (Model.RoleUser == "Vip")
        {
            using (Html.BeginForm("CancelSubscription", "ThanhToans", new { userId = Model.ID_User }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger" style="margin-left:900px">Hủy gói</button>
            }
        }
    </p>
</div>

<script>
    $(document).ready(function () {
        $('#show-hide-password').click(function (e) {
            e.preventDefault();
            var passwordContainer = $('#password-container');
            var passwordValue = $('#password-value');
            var linkText = $(this).text();
            var dataPassword = passwordValue.data('password'); // Lấy mật khẩu từ thuộc tính dữ liệu

            if (linkText === 'Hiện') {
                passwordValue.text(dataPassword);
                $(this).text('Ẩn');
            } else {
                passwordValue.text('******');
                $(this).text('Hiện');
            }
        });
    });
</script>

